{
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://olivegardens-backend-production-d1a4.up.railway.app/api/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "https://olivegardens-backend-production-d1a4.up.railway.app/uploads/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff",
        "X-XSS-Protection": "1; mode=block",
        "Content-Security-Policy": "default-src 'self'; script-src 'self'; object-src 'none'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self' https://olivegardens-backend-production-d1a4.up.railway.app",
        "Cross-Origin-Resource-Policy": "same-origin",
        "Cross-Origin-Opener-Policy": "same-origin",
        "Cross-Origin-Embedder-Policy": "require-corp",
        "Referrer-Policy": "no-referrer-when-downgrade",
        "Permissions-Policy": "geolocation=(), camera=(), microphone=()"
      }
    }
  ]
}
